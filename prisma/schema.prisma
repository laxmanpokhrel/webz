generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SocialMediaMetric {
  id           Int      @id @default(autoincrement())
  social_media String
  metric_type  String
  count        Int      @default(0)
  updated      DateTime
  Thread       Thread?  @relation(fields: [threadUuid], references: [uuid])
  threadUuid   String?
}

model Thread {
  uuid                String              @unique
  url                 String
  site_full           String
  site                String
  site_section        String
  site_categories     String[]
  section_title       String
  title               String
  title_full          String
  published           DateTime?
  replies_count       Int?                @default(0)
  participants_count  Int?                @default(0)
  site_type           String?
  country             String?
  main_image          String?
  performance_score   Int?                @default(0)
  domain_rank         Int?                @default(0)
  domain_rank_updated DateTime?
  SocialMediaMetric   SocialMediaMetric[]
}

model Post {
  uuid                 String   @unique
  url                  String
  ord_in_thread        Int      @default(0)
  parent_url           String?
  author               String?
  published            DateTime
  title                String
  text                 String?
  highlightText        String?
  highlightThreadTitle String?
  highlightTitle       String?
  language             String
  sentiment            String?
  site_categories      String[]
  external_links       String[]
  external_images      String[]
  rating               Int?
  crawled              DateTime
  updated              DateTime
  categories           String[]
  Entity               Entity[]
}

model Entity {
  id               Int    @id @default(autoincrement())
  post             Post   @relation(fields: [post_id], references: [uuid])
  post_id          String
  entity_type      String
  entity_name      String
  entity_sentiment String
}
